[*]
end_of_line = lf
charset = utf-8

[*.{js,jsx,ts,tsx,css,html,json,xml,yaml,yml,properties,graphqls}]
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = false

[*.{xml}]
indent_style = tab
indent_size = 4

[*.{js,jsx,ts,tsx,css,html,json,yaml,yml,properties,graphqls,sh}]
indent_style = space
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
